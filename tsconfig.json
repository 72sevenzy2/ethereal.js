{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "removeComments": false,
    "rootDir": "src",
    "outDir": "main",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["src/**/*"]
}
